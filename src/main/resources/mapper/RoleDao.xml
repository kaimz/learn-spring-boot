<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.modules.generator.dao.SysRoleDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.renren.modules.generator.entity.SysRoleEntity" id="sysRoleMap">
        <result property="id" column="id"/>
        <result property="roleName" column="role_name"/>
        <result property="createUserId" column="create_user_id"/>
        <result property="createTime" column="create_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <select id="queryObject" resultType="io.renren.modules.generator.entity.SysRoleEntity">
        SELECT *
        FROM sys_role
        WHERE id = #{value}
    </select>

    <select id="queryList" resultType="io.renren.modules.generator.entity.SysRoleEntity">
        select * from sys_role
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        SELECT count(*)
        FROM sys_role
    </select>

    <insert id="save" parameterType="io.renren.modules.generator.entity.SysRoleEntity" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO sys_role
        (
            `role_name`,
            `create_user_id`,
            `create_time`,
            `remark`
        )
        VALUES
            (
                #{roleName},
                #{createUserId},
                #{createTime},
                #{remark}
            )
    </insert>

    <update id="update" parameterType="io.renren.modules.generator.entity.SysRoleEntity">
        update sys_role
        <set>
            <if test="roleName != null">`role_name` = #{roleName},</if>
            <if test="createUserId != null">`create_user_id` = #{createUserId},</if>
            <if test="createTime != null">`create_time` = #{createTime},</if>
            <if test="remark != null">`remark` = #{remark}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM sys_role
        WHERE id = #{value}
    </delete>

    <delete id="deleteBatch">
        delete from sys_role where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>