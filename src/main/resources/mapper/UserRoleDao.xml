<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.modules.generator.dao.SysUserRoleDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.renren.modules.generator.entity.SysUserRoleEntity" id="sysUserRoleMap">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="roleId" column="role_id"/>
    </resultMap>

    <select id="queryObject" resultType="io.renren.modules.generator.entity.SysUserRoleEntity">
        SELECT *
        FROM sys_user_role
        WHERE id = #{value}
    </select>

    <select id="queryList" resultType="io.renren.modules.generator.entity.SysUserRoleEntity">
        select * from sys_user_role
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        SELECT count(*)
        FROM sys_user_role
    </select>

    <insert id="save" parameterType="io.renren.modules.generator.entity.SysUserRoleEntity" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO sys_user_role
        (
            `user_id`,
            `role_id`
        )
        VALUES
            (
                #{userId},
                #{roleId}
            )
    </insert>

    <update id="update" parameterType="io.renren.modules.generator.entity.SysUserRoleEntity">
        update sys_user_role
        <set>
            <if test="userId != null">`user_id` = #{userId},</if>
            <if test="roleId != null">`role_id` = #{roleId}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM sys_user_role
        WHERE id = #{value}
    </delete>

    <delete id="deleteBatch">
        delete from sys_user_role where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>