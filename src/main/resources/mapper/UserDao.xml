<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wuwii.dao.UserDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.wuwii.model.UserDO" id="userMap">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="mobile" column="mobile"/>
        <result property="email" column="email"/>
        <result property="createUserId" column="create_user_id"/>
        <result property="createDate" column="create_date"/>
    </resultMap>

    <select id="queryObject" resultType="com.wuwii.model.UserDO">
        SELECT *
        FROM sys_user
        WHERE id = #{value}
    </select>

    <select id="queryList" resultType="com.wuwii.model.UserDO">
        select * from sys_user
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        SELECT count(*)
        FROM sys_user
    </select>

    <insert id="save" parameterType="com.wuwii.model.UserDO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_user
        (
            `username`,
            `password`,
            `mobile`,
            `email`,
            `create_user_id`,
            `create_date`
        )
        VALUES
            (
                #{username},
                #{password},
                #{mobile},
                #{email},
                #{createUserId},
                #{createDate}
            )
    </insert>

    <update id="update" parameterType="com.wuwii.model.UserDO">
        update sys_user
        <set>
            <if test="username != null">`username` = #{username},</if>
            <if test="password != null">`password` = #{password},</if>
            <if test="mobile != null">`mobile` = #{mobile},</if>
            <if test="email != null">`email` = #{email},</if>
            <if test="createUserId != null">`create_user_id` = #{createUserId},</if>
            <if test="createDate != null">`create_date` = #{createDate}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM sys_user
        WHERE id = #{value}
    </delete>

    <delete id="deleteBatch">
        delete from sys_user where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>